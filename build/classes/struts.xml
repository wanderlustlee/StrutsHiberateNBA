<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

<package name="default" namespace="/" extends="struts-default">

<action name="UserLogin" class="action.LoginAction" method="userLogin">
	<result name="success">../home/home.jsp</result>
	<result name="error">login.jsp</result>
</action>

<action name="UserRegister" class="action.LoginAction" method="userRegister">
	<result name="success">login.jsp</result>
	<result name="error">sign in.jsp</result>
</action>
<action name="UserShare" class="action.ShareAction" method="share">
	<result name="success">share.jsp</result>
	<result name="error">sign in.jsp</result>
</action>
<action name="UserSetting" class="action.LoginAction" method="userSetting">
	
</action>
</package>

</struts>